<% layout("/layouts/boilerplate")%>


<div class="row mt-3">
    <div class="col-8 offset-2">   
    <h1>Create New Listing</h1>
    <form action="/listings" method="post" novalidate class="needs-validation" enctype="multipart/form-data">
        <div class="mb-3">
            <label for="title" class="form-lable">Title</label>
            <input type="text" name="listing[title]" placeholder="Add a catchy title" required class="form-control">
            <div class="valid-feedback">
                Looks good!
              </div>
              <div class="invalid-feedback">
                Please Enter Title.
              </div>
        </div>

        <div class="mb-3">
            <label for="description" class="form-lable">Description</label>
            <textarea name="listing[description]" placeholder="enter description" required
            class="form-control"></textarea>
            <div class="invalid-feedback">
                Please Enter Description.
              </div>
        </div>
        
        <div class="mb-3">
            <label for="image" class="form-lable">Upload Image</label>
            <input type="file" name="listing[image]" class="form-control">
        </div>

        <div class="row">
            <div class="mb-3 col-md-4" >
                <label for="price" class="form-lable">Price</label>
                <input type="number" name="listing[price]" placeholder="1200" required class="form-control">
                <div class="invalid-feedback">
                    Please Select Valid Price.
                  </div>
            </div>
            <div class="mb-3 col-md-8">
                <label for="country" class="form-lable">Country</label>
                <input type="text" name="listing[country]" placeholder="India" required class="form-control">
                <div class="invalid-feedback">
                    Please Enter Country.
                  </div>
            </div>
        </div>
            <div class="mb-3">
                <label for="location" class="form-lable">Location</label>
                <input type="text" name="listing[location]" placeholder="Jaipur, Rajasthan" required class="form-control">
                <div class="invalid-feedback">
                    Please Enter Location.
                  </div>
            </div>

            <button class="btn btn-dark add-btn mt-3">Add</button>

        </form>
        </div>
    </div>